<form method="post" action="{{ path('app_tournaments_delete', {'id': tournament.id}) }}" onsubmit="return confirm(`{{ 'Are you sure you want to delete this item?'|trans}}`);">
    <input class="" type="hidden" name="_token" value="{{ csrf_token('delete' ~ tournament.id) }}">
    <button type="submit" class="btn btn-sm btn-danger">{{ 'Delete'|trans }}</button>
</form>
