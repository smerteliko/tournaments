{% extends 'base.html.twig' %}

{% block title %}{{ 'Teams list'|trans  }}{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="col-6 d-flex flex-row justify-content-between align-items-center">
            <h1>{{ 'Teams list'|trans  }}</h1>
            {% if teams  %}
            <a class="btn btn-primary btn-sm" role="button" href="{{ path('app_teams_new') }}">{{ 'Create new'|trans  }}</a>
            {% endif %}
        </div>
        {% if teams  %}
        <div class="col-6 ">
            <div class="row d-flex flex-row justify-content-evenly align-items-center mb-3  border-bottom">
                <div class="col m-1 text-center">ID</div>
                <div class="col m-1 text-center">{{ 'Name'|trans }}</div>
                <div class="col m-1 text-center">{{ 'Actions'|trans  }}</div>
            </div>
            {% for team in teams %}
                <div class="row d-flex flex-row justify-content-evenly align-items-center mb-2  border-bottom border-primary">
                    <div class="col m-1 border-end border-primary text-center">{{ team.id }}</div>
                    <div class="col m-1 border-end border-primary text-center">{{ team.Name }}</div>
                    <div class="col m-1 text-center">
                        {{ include('teams/_delete_form.html.twig') }}
                    </div>
                </div>
            {% endfor %}
        </div>
        {% else %}
            <div class="col-6 d-flex flex-row justify-content-evenly align-items-center">
                <h3>{{ 'No teams registered'|trans  }}</h3>
                <a class="btn btn-primary btn-sm" role="button" href="{{ path('app_teams_new') }}">{{ 'Create new team'|trans  }}</a>
            </div>
        {% endif %}
    </div>

{% endblock %}
